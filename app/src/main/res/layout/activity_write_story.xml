<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:padding="20dip" >

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:contentDescription="placeholder for map"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_map" />

        <ImageButton
            android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/story_image"
            android:layout_toLeftOf="@+id/button_gallery"
            android:background="@android:color/transparent"
            android:contentDescription="button interface for camera"
            android:src="@drawable/ic_camera" />

        <ImageButton
            android:id="@+id/button_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/story_image"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:background="@android:color/transparent"
            android:contentDescription="button interface for galleryf0f0f0"
            android:src="@drawable/ic_gallery" />

        <EditText
            android:id="@+id/story_text"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:layout_below="@id/story_image"
            android:layout_marginTop="20dip"
            android:background="#ddffffff"
            android:gravity="left|top"
            android:hint="So.. What's your story?!"
            android:padding="10dip"
            android:singleLine="false"
            android:textColor="#000"
            android:layout_alignRight="@+id/story_image"
            android:layout_alignEnd="@+id/story_image" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:text="POST"
            android:id="@+id/post_button"
            android:layout_below="@+id/story_text"
            android:layout_alignRight="@+id/story_text"
            android:layout_alignEnd="@+id/story_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>